{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
{{ form_start(form, {
    'method': 'post',
    'action': path('fos_user_registration_register'),
    'attr': {'class': 'form-horizontal'}})
}}
    <div class="form-inline">
        <div class="form-group">
            {{ form_label(form.civility, null, {'label_attr': {'class': 'sr-only'}}) }}
            {{ form_errors(form.civility) }}
            <div class="col-sm-2">
                {{ form_widget(form.civility, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.firstName, null, {'label_attr': {'class': 'sr-only'}}) }}
            {{ form_errors(form.firstName) }}
            <div class="col-sm-4">
                {{ form_widget(form.firstName, { 'attr': {'class': 'form-control', 'placeholder' : 'first name'} }) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.lastName, null, {'label_attr': {'class': 'sr-only'}}) }}
            {{ form_errors(form.lastName) }}
            <div class="col-sm-4">
                {{ form_widget(form.lastName, { 'attr': {'class': 'form-control', 'placeholder' : 'last name'} }) }}
            </div>
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.email, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
        {{ form_errors(form.email) }}
        <div class="col-sm-4">
            {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
        {{ form_errors(form.plainPassword.first) }}
        <div class="col-sm-4">
            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
        {{ form_errors(form.plainPassword.second) }}
        <div class="col-sm-4">
            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.birthDate, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
        {{ form_errors(form.birthDate) }}
        <div class="col-sm-4">
            {{ form_widget(form.birthDate, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.country, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
        {{ form_errors(form.country) }}
        <div class="col-sm-4">
            {{ form_widget(form.country, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.city, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
        {{ form_errors(form.city) }}
        <div class="col-sm-4">
            {{ form_widget(form.city, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.zipCode, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
        {{ form_errors(form.zipCode) }}
        <div class="col-sm-3">
            {{ form_widget(form.zipCode, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.address, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
        {{ form_errors(form.address) }}
        <div class="col-sm-10">
            {{ form_widget(form.address, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.phone, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
        {{ form_errors(form.phone) }}
        <div class="col-sm-4">
            {{ form_widget(form.phone, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>

    <div class="form-group row">
        {{ form_label(form.description, null, {'label_attr': {'class': 'col-2 col-form-label'}}) }}
        {{ form_errors(form.description) }}
        <div class="col-10">
            {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>

    {% for formskill in form.teacherSkills %}
        <div class="form-group">
            {{ form_label(formskill.course, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            {{ form_errors(formskill.course) }}
            <div class="col-sm-4">
                {{ form_widget(formskill.course, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(formskill.level, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            {{ form_errors(formskill.level) }}
            <div class="col-sm-4">
                {{ form_widget(formskill.level, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
    {% endfor %}

    <div>
        <input type="submit" class="btn btn-default">{{ 'registration.submit'|trans }}</input>
    </div>
{{ form_end(form) }}
</div>